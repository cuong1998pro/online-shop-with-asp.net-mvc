@model List<Model.EntityFramework.Menu>

<div class="headertop_desc">
    <div class="call">
        <p>Số điện thoại: <span class="number">031.666.888</span></p>
    </div>
    <div class="account_desc">
        @{ var session = (OnlineShop.Common.UserLogin)Session[OnlineShop.Common.CommonConstants.USER_SESSION.ToString()];}
        @if (session == null)
        {
            <ul>
                @foreach (var item in Model)
                {
                    <li><a href="@item.Link" target="@item.Target">@item.Text</a></li>
                }
            </ul>
        }
        else
        {
            <ul>
                <li>Xin chào @session.Username</li>
                <li><a href="/dang-xuat"> Đăng xuất</a></li>
            </ul>
        }
    </div>
    <div class="clear"></div>
</div>