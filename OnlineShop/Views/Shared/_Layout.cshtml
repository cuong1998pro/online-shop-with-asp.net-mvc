<!DOCTYPE HTML>
<html>
<head>
    <title>Free Home Shoppe Website Template | Home :: w3layouts</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="/assets/client/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="/assets/client/css/slider.css" rel="stylesheet" type="text/css" media="all" />
    @*<script type="text/javascript" src="/assets/client/js/jquery-1.7.2.min.js"></script>*@
    <script src="/Assets/Client/js/jquery-3.5.1.min.js"></script>
    <script type="text/javascript" src="/assets/client/js/move-top.js"></script>
    <script type="text/javascript" src="/assets/client/js/easing.js"></script>
    <script src="/assets/client/js/easyResponsiveTabs.js" type="text/javascript"></script>
    <link href="/assets/client/css/easy-responsive-tabs.css" rel="stylesheet" type="text/css" media="all" />
    <link href="/Assets/Client/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/Assets/Client/css/bootstrap-theme.min.css" rel="stylesheet" />
    <script type="text/javascript" src="/assets/client/js/startstop-slider.js"></script>
    <link rel="stylesheet" href="/assets/client/css/global.css">
    <script src="/assets/client/js/slides.min.jquery.js"></script>
    <script src="/Assets/Client/js/bootstrap.min.js"></script>
    <link href="/Assets/Client/css/jquery-ui.css" rel="stylesheet" />
    <script src="/Assets/Client/js/jquery-ui.js"></script>
    @RenderSection("header", false)
</head>
<body>
    <div class="wrap">
        <div class="header">
            @*topmenu*@
            @{ Html.RenderAction("TopMenu", "Home");}
            <div class="header_top">
                <div class="logo">
                    <a href="/" ref="nofollow"><img src="/assets/client/images/logo.png" alt="" /></a>
                </div>

                @*Cart*@
                @{ Html.RenderAction("HeaderCart", "Home");}

                <script type="text/javascript">
                    function DropDown(el) {
                        this.dd = el;
                        this.initEvents();
                    }
                    DropDown.prototype = {
                        initEvents: function () {
                            var obj = this;

                            obj.dd.on('click', function (event) {
                                $(this).toggleClass('active');
                                event.stopPropagation();
                            });
                        }
                    }

                    $(function () {

                        var dd = new DropDown($('#dd'));

                        $(document).click(function () {
                            // all dropdowns
                            $('.wrapper-dropdown-2').removeClass('active');
                        });

                    });
                </script>
                <div class="clear"></div>
            </div>
            @{Html.RenderAction("MainMenu", "Home"); }

            @RenderSection("slide", false)
        </div>
        <div class="main">
            @RenderBody()
        </div>
    </div>
    <div class="footer">
        @{ Html.RenderAction("Footer", "Home");}
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $().UItoTop({ easingType: 'easeOutQuart' });

        });
    </script>

    @RenderSection("script", false)
    <a href="#" id="toTop"><span id="toTopHover"> </span></a>
</body>
</html>