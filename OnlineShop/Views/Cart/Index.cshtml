@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<OnlineShop.Models.CartItem>

<div class="content">
    <div class="content-top">
        @if (Model.Count() > 0)
        {

            <table class="table">
                <thead>
                    <tr>
                        <td>Mã sản phẩm</td>
                        <td>Tên sản phẩm</td>
                        <td>Ảnh sản phẩm</td>
                        <td>Số lượng</td>
                        <td>Đơn giá</td>
                        <td>Thành tiền</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Product.ID</td>
                            <td>@item.Product.Name</td>
                            <td>
                                <img src="@item.Product.Image" class="img-fluid rounded" width="200" alt="@item.Product.Name" />
                            </td>
                            <td>
                                <input type="number" class="quantity" name="name" value="@item.Quantity" />
                            </td>
                            <td>@(item.Product.Price.HasValue ? item.Product.Price.Value.ToString("N0") : "Liên hệ")</td>
                            <td>@(item.Product.Price.HasValue ? (item.Product.Price.Value * item.Quantity).ToString("N0") : "#")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <span class="alert alert-danger">Chưa có sản phẩm nào trong giỏ hàng</span>
        }
    </div>
</div>